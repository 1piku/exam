<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="ajaxform">
        <column xsi:type="int" name="id_column" nullable="false" identity="true" comment="Id_Column"/>
        <column xsi:type="varchar" name="name" length="255" nullable="false" comment="name"/>
        <column xsi:type="varchar" name="email"  length="255" nullable="false" comment="email"/>
        <column xsi:type="int" name="telephone" nullable="false" comment="telephone"/>
        <column xsi:type="varchar" name="comment" length="255"  comment="comment"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id_column"/>
        </constraint>
   </table>
</schema>